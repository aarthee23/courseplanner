<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All concentrations
    </h1>

    <a href="/concentrations/new" class="btn btn-block btn-outline-secondary">
      Add a new concentration
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "concentration_templates/concentrations_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Req unit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @concentrations.each do |concentration| %>
      <tr>
        <td>
          <%= concentration.id %>
        </td>

        <td>
          <%= concentration.name %>
        </td>

        <td>
          <%= concentration.req_unit %>
        </td>

        <td>
          <%= time_ago_in_words(concentration.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(concentration.updated_at) %> ago
        </td>

        <td>
          <a href="/concentrations/<%= concentration.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @concentrations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
