<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All concentrations
    </h1>

    <a href="/concentrations/new" class="btn btn-block btn-outline-secondary">
      Add a new concentration
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Req unit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @concentrations.each do |concentration| %>
      <tr>
        <!-- Display concentration.id start -->
        <td>
          <%= concentration.id %>
        </td>
        <!-- Display concentration.id end -->

        <!-- Display concentration.name start -->
        <td>
          <%= concentration.name %>
        </td>
        <!-- Display concentration.name end -->

        <!-- Display concentration.req_unit start -->
        <td>
          <%= concentration.req_unit %>
        </td>
        <!-- Display concentration.req_unit end -->

        <!-- Display concentration.created_at start -->
        <td>
          <%= time_ago_in_words(concentration.created_at) %> ago
        </td>
        <!-- Display concentration.created_at end -->

        <!-- Display concentration.updated_at start -->
        <td>
          <%= time_ago_in_words(concentration.updated_at) %> ago
        </td>
        <!-- Display concentration.updated_at end -->

        <td>
          <a href="/concentrations/<%= concentration.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @concentrations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
