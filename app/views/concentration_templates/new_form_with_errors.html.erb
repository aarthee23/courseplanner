<!-- Validation failure messages -->
<% if @concentration.present? %>
  <% if @concentration.errors.any? %>
    <% @concentration.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new concentration
</h1>


<hr>

<!-- Form concentration start -->
<form action="/create_concentration" method="post">
<!-- Form concentration end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @concentration.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for req_unit start -->
  <div class="form-group">
    <label for="req_unit">
      Req unit
    </label>

    <!-- Input for req_unit start -->
    <input type="text" id="req_unit" name="req_unit" class="form-control" value="<%= @concentration.req_unit %>">
    <!-- Input for req_unit end -->
  </div>
  <!-- Label and input for req_unit end -->

  <button class="btn btn-block btn-outline-secondary">
    Create concentration
  </button>
</form>

<hr>

<a href="/concentrations">
  Go back
</a>
