<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Course plan #<%= @course_plan.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/course_plans" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @course_plan.user %>
          <a href="/course_plans/<%= @course_plan.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit course_plan
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @course_plan.user %>
          <a href="/delete_course_plan/<%= @course_plan.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete course_plan
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @course_plan.user.present? %>
          <a href="/users/<%= @course_plan.user_id %>">
            <%= @course_plan.user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@course_plan.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@course_plan.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "course_plan_templates/course_plan_user_course_selections" %>
  </div>
</div>
