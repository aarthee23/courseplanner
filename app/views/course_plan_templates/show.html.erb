<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Course plan #<%= @course_plan.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/course_plans" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link course_plan start -->
      <div class="col">
        <% if current_user == @course_plan.user %>
          <a href="/course_plans/<%= @course_plan.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit course_plan
          </a>
        <% end %>
      </div>
      <!-- Edit link course_plan end -->

      <!-- Delete link course_plan start -->
      <div class="col">
        <% if current_user == @course_plan.user %>
          <a href="/delete_course_plan/<%= @course_plan.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete course_plan
          </a>
        <% end %>
      </div>
      <!-- Delete link course_plan end -->
    </div>

    <dl>
      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @course_plan.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@course_plan.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@course_plan.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "course_plan_templates/course_plan_user_course_selections" %>
  </div>
</div>
<!-- Show Page Customization end -->
