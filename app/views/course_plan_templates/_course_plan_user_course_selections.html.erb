<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    User Course Selections

    <a data-toggle="collapse" href="#course_plan_user_course_selections_new_form">
      Add user course selection
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @course_plan.user_course_selections.each do |user_course_selection| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/user_course_selections/<%= user_course_selection.id %>">
          <%= user_course_selection.course_plan_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_user_course_selection_from_course_plan/<%= user_course_selection.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="course_plan_user_course_selections_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "course_plan_templates/course_plan_user_course_selections_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
