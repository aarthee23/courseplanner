<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Course
        </th>

        <th>
          Concentration
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @course_concentrations.each do |course_concentration| %>
      <tr>
        <!-- Display course_concentration.id start -->
        <td>
          <%= course_concentration.id %>
        </td>
        <!-- Display course_concentration.id end -->

        <!-- Display course_concentration.course_id start -->
        <td>
          <%= course_concentration.course.title %>
        </td>
        <!-- Display course_concentration.course_id end -->

        <!-- Display course_concentration.concentration_id start -->
        <td>
          <%= course_concentration.concentration.name %>
        </td>
        <!-- Display course_concentration.concentration_id end -->

        <!-- Display course_concentration.created_at start -->
        <td>
          <%= time_ago_in_words(course_concentration.created_at) %> ago
        </td>
        <!-- Display course_concentration.created_at end -->

        <!-- Display course_concentration.updated_at start -->
        <td>
          <%= time_ago_in_words(course_concentration.updated_at) %> ago
        </td>
        <!-- Display course_concentration.updated_at end -->

        <td>
          <a href="/course_concentrations/<%= course_concentration.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
