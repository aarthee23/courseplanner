<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All course concentrations
    </h1>

    <a href="/course_concentrations/new" class="btn btn-block btn-outline-secondary">
      Add a new course concentration
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "course_concentration_templates/course_concentrations_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Course
        </th>

        <th>
          Concentration
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @course_concentrations.each do |course_concentration| %>
      <tr>
        <td>
          <%= course_concentration.id %>
        </td>

        <td>
          <% if course_concentration.course.present? %>
            <a href="/courses/<%= course_concentration.course.id %>">
              <%= course_concentration.course.title %>
            </a>
          <% end %>
        </td>

        <td>
          <% if course_concentration.concentration.present? %>
            <a href="/concentrations/<%= course_concentration.concentration.id %>">
              <%= course_concentration.concentration.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(course_concentration.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(course_concentration.updated_at) %> ago
        </td>

        <td>
          <a href="/course_concentrations/<%= course_concentration.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @course_concentrations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
