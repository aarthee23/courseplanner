<h1>
  Add a new course concentration
</h1>


<hr>

<form action="/create_course_concentration" method="post">

  <div class="form-group">
    <label for="course_id">
      Course
    </label>

    <%= select_tag(:course_id, options_from_collection_for_select(Course.all, :id, :title, @course_concentration.course_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="concentration_id">
      Concentration
    </label>

    <%= select_tag(:concentration_id, options_from_collection_for_select(Concentration.all, :id, :name, @course_concentration.concentration_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create course concentration
  </button>
</form>

<hr>

<a href="/course_concentrations">
  Go back
</a>
