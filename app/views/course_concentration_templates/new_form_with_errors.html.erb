<!-- Validation failure messages -->
<% if @course_concentration.present? %>
  <% if @course_concentration.errors.any? %>
    <% @course_concentration.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new course concentration
</h1>


<hr>

<!-- Form course_concentration start -->
<form action="/create_course_concentration" method="post">
<!-- Form course_concentration end -->

  <!-- Label and input for course_id start -->
  <div class="form-group">
    <label for="course_id">
      Course
    </label>

    <!-- Input for course_id start -->
    <input type="text" id="course_id" name="course_id" class="form-control" value="<%= @course_concentration.course_id %>">
    <!-- Input for course_id end -->
  </div>
  <!-- Label and input for course_id end -->

  <!-- Label and input for concentration_id start -->
  <div class="form-group">
    <label for="concentration_id">
      Concentration
    </label>

    <!-- Input for concentration_id start -->
    <input type="text" id="concentration_id" name="concentration_id" class="form-control" value="<%= @course_concentration.concentration_id %>">
    <!-- Input for concentration_id end -->
  </div>
  <!-- Label and input for concentration_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create course concentration
  </button>
</form>

<hr>

<a href="/course_concentrations">
  Go back
</a>
