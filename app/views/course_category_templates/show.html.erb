<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Course category #<%= @course_category.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/course_categories" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/course_categories/<%= @course_category.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit course category
        </a>
      </div>

      <div class="col">
        <a href="/delete_course_category/<%= @course_category.id %>" class="btn btn-block btn-outline-secondary">
          Delete course category
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Course
      </dt>
      <dd>
        <% if @course_category.course.present? %>
          <a href="/courses/<%= @course_category.course_id %>">
            <%= @course_category.course.title %>
          </a>
        <% end %>
      </dd>

      <dt>
        Category
      </dt>
      <dd>
        <% if @course_category.category.present? %>
          <a href="/categories/<%= @course_category.category_id %>">
            <%= @course_category.category.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@course_category.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@course_category.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

