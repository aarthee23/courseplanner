<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All user course selections
    </h1>

    <a href="/user_course_selections/new" class="btn btn-block btn-outline-secondary">
      Add a new user course selection
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "user_course_selection_templates/user_course_selections_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Course plan
        </th>

        <th>
          Course
        </th>

        <th>
          Professor
        </th>

        <th>
          Quarter
        </th>

        <th>
          Day
        </th>

        <th>
          Hours of preparation
        </th>

        <th>
          Rating
        </th>

        <th>
          Bid points
        </th>

        <th>
          Pre req
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @user_course_selections.each do |user_course_selection| %>
      <tr>
        <td>
          <%= user_course_selection.id %>
        </td>

        <td>
          <% if user_course_selection.course_plan.present? %>
            <a href="/course_plans/<%= user_course_selection.course_plan.id %>">
              <%= user_course_selection.course_plan.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if user_course_selection.course.present? %>
            <a href="/courses/<%= user_course_selection.course.id %>">
              <%= user_course_selection.course.title %>
            </a>
          <% end %>
        </td>

        <td>
          <%= user_course_selection.professor %>
        </td>

        <td>
          <%= user_course_selection.quarter %>
        </td>

        <td>
          <%= user_course_selection.day %>
        </td>

        <td>
          <%= user_course_selection.hours_of_preparation %>
        </td>

        <td>
          <%= user_course_selection.rating %>
        </td>

        <td>
          <%= user_course_selection.bid_points %>
        </td>

        <td>
          <%= user_course_selection.pre_req %>
        </td>

        <td>
          <%= time_ago_in_words(user_course_selection.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(user_course_selection.updated_at) %> ago
        </td>

        <td>
          <a href="/user_course_selections/<%= user_course_selection.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @user_course_selections, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
