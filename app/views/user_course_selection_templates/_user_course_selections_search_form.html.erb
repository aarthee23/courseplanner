<%= search_form_for @q, :class => collapse_search_form, :id => "user_course_selections_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :pre_req_cont, "Pre req contains" %>
    <%= f.text_field :pre_req_cont, :class => "form-control", :placeholder => "Pre req contains" %>
  </div>

  <div class="form-group">
    <%= f.label :bid_points_cont, "Bid points contains" %>
    <%= f.text_field :bid_points_cont, :class => "form-control", :placeholder => "Bid points contains" %>
  </div>

  <div class="form-group">
    <%= f.label :rating_cont, "Rating contains" %>
    <%= f.text_field :rating_cont, :class => "form-control", :placeholder => "Rating contains" %>
  </div>

  <div class="form-group">
    <%= f.label :hours_of_preparation_cont, "Hours of preparation contains" %>
    <%= f.text_field :hours_of_preparation_cont, :class => "form-control", :placeholder => "Hours of preparation contains" %>
  </div>

  <div class="form-group">
    <%= f.label :day_cont, "Day contains" %>
    <%= f.text_field :day_cont, :class => "form-control", :placeholder => "Day contains" %>
  </div>

  <div class="form-group">
    <%= f.label :quarter_cont, "Quarter contains" %>
    <%= f.text_field :quarter_cont, :class => "form-control", :placeholder => "Quarter contains" %>
  </div>

  <div class="form-group">
    <%= f.label :professor_cont, "Professor contains" %>
    <%= f.text_field :professor_cont, :class => "form-control", :placeholder => "Professor contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :course_title_cont, "Course title contains" %>
    <%= f.text_field :course_title_cont, :class => "form-control", :placeholder => "Course title contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "CoursePlan Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='course_plangteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :course_plan_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "CoursePlan Created at greater than or equal to", :data => {:target => '#course_plangteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#course_plangteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='course_planlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :course_plan_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "CoursePlan Created at less than or equal to", :data => {:target => '#course_planlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#course_planlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#course_plangteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#course_planlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#course_plangteqcreated_atPicker').on("dp.change", function (e) {
              $('#course_planlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#course_planlteqcreated_atPicker').on("dp.change", function (e) {
              $('#course_plangteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/user_course_selections" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#user_course_selections_filters">
  Show filters
</a>
