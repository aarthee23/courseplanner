<% if @user_course_selection.present? %>
  <% if @user_course_selection.errors.any? %>
    <% @user_course_selection.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new user course selection
</h1>


<hr>

<form action="/create_user_course_selection" method="post">

  <div class="form-group">
    <label for="course_plan_id">
      Course plan
    </label>

    <%= select_tag(:course_plan_id, options_from_collection_for_select(CoursePlan.all, :id, :created_at, @user_course_selection.course_plan_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="course_id">
      Course
    </label>

    <%= select_tag(:course_id, options_from_collection_for_select(Course.all, :id, :title, @user_course_selection.course_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="professor">
      Professor
    </label>

    <input type="text" id="professor" name="professor" class="form-control" value="<%= @user_course_selection.professor %>">
  </div>

  <div class="form-group">
    <label for="quarter">
      Quarter
    </label>

    <input type="text" id="quarter" name="quarter" class="form-control" value="<%= @user_course_selection.quarter %>">
  </div>

  <div class="form-group">
    <label for="day">
      Day
    </label>

    <input type="text" id="day" name="day" class="form-control" value="<%= @user_course_selection.day %>">
  </div>

  <div class="form-group">
    <label for="hours_of_preparation">
      Hours of preparation
    </label>

    <input type="text" id="hours_of_preparation" name="hours_of_preparation" class="form-control" value="<%= @user_course_selection.hours_of_preparation %>">
  </div>

  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" class="form-control" value="<%= @user_course_selection.rating %>">
  </div>

  <div class="form-group">
    <label for="bid_points">
      Bid points
    </label>

    <input type="text" id="bid_points" name="bid_points" class="form-control" value="<%= @user_course_selection.bid_points %>">
  </div>

  <div class="form-group">
    <label for="pre_req">
      Pre req
    </label>

    <input type="text" id="pre_req" name="pre_req" class="form-control" value="<%= @user_course_selection.pre_req %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create user course selection
  </button>
</form>

<hr>

<a href="/user_course_selections">
  Go back
</a>
