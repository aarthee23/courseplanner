<% if @course.present? %>
  <% if @course.errors.any? %>
    <% @course.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new course
</h1>


<hr>

<form action="/create_course" method="post">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @course.title %>">
  </div>

  <div class="form-group">
    <label for="number">
      Number
    </label>

    <input type="text" id="number" name="number" class="form-control" value="<%= @course.number %>">
  </div>

  <div class="form-group">
    <label for="unit">
      Unit
    </label>

    <input type="text" id="unit" name="unit" class="form-control" value="<%= @course.unit %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create course
  </button>
</form>

<hr>

<a href="/courses">
  Go back
</a>
