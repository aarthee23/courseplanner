<h1>
  Edit course #<%= @course.id %>
</h1>

<hr>

<form action="/update_course/<%= @course.id %>" method="post">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @course.title %>">
  </div>

  <div class="form-group">
    <label for="number">
      Number
    </label>

    <input type="text" id="number" name="number" class="form-control" value="<%= @course.number %>">
  </div>

  <div class="form-group">
    <label for="unit">
      Unit
    </label>

    <input type="text" id="unit" name="unit" class="form-control" value="<%= @course.unit %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update course
  </button>
</form>

<hr>

<a href="/courses">
  Go back
</a>
