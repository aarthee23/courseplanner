<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All courses
    </h1>

    <a href="/courses/new" class="btn btn-block btn-outline-secondary">
      Add a new course
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "course_templates/courses_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Number
        </th>

        <th>
          Unit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @courses.each do |course| %>
      <tr>
        <!-- Display course.id start -->
        <td>
          <%= course.id %>
        </td>
        <!-- Display course.id end -->

        <!-- Display course.title start -->
        <td>
          <%= course.title %>
        </td>
        <!-- Display course.title end -->

        <!-- Display course.number start -->
        <td>
          <%= course.number %>
        </td>
        <!-- Display course.number end -->

        <!-- Display course.unit start -->
        <td>
          <%= course.unit %>
        </td>
        <!-- Display course.unit end -->

        <!-- Display course.created_at start -->
        <td>
          <%= time_ago_in_words(course.created_at) %> ago
        </td>
        <!-- Display course.created_at end -->

        <!-- Display course.updated_at start -->
        <td>
          <%= time_ago_in_words(course.updated_at) %> ago
        </td>
        <!-- Display course.updated_at end -->

        <td>
          <a href="/courses/<%= course.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @courses, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
