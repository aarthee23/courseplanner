<!-- Form course_concentration start -->
<form action="/create_course_concentration_from_course" method="post">
<!-- Form course_concentration end -->

  <!-- Label and input for course_id start -->
  <!-- Input for course_id start -->
  <input type="hidden" name="course_id" value="<%= @course.id %>">
  <!-- Input for course_id end -->

  <!-- Label and input for concentration_id start -->
  <div class="form-group">
    <label for="concentration_id">
      Concentration
    </label>

    <!-- Input for concentration_id start -->
    <%= select_tag(:concentration_id, options_from_collection_for_select(Concentration.all, :id, :name, @course_concentration.concentration_id), :class => "form-control") %>
    <!-- Input for concentration_id end -->
  </div>
  <!-- Label and input for concentration_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create course concentration
  </button>
</form>
